//Funcion to find sum of numbers
int getSum(int arr[],int n)
{
int sum=0;
for(int i=0;i<n;i++)
sum=sum+arr[i];
return sum;
}

//Return 0 if array size is Even
int getSum(int arr[],int n){
if(n%2==0) 
return 0;
int sum=0;
for(int i=0;i<n;i++)
sum=sum+arr[i];
return sum;
}
//Liner search
int search(int arr[],int n,int x){
//First Traverse, then only search
for(int i=0;i<n;i++)
if(arr[i]==x)
return i;
else
return -1;
}
